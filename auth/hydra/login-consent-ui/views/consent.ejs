<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Authorize Application</title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .container {
      background: white;
      padding: 40px;
      border-radius: 12px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.2);
      width: 100%;
      max-width: 450px;
    }
    h1 { color: #333; margin-bottom: 8px; }
    .subtitle { color: #666; margin-bottom: 24px; font-size: 14px; }
    .client-name {
      font-weight: 600;
      color: #667eea;
    }
    .user-info {
      background: #f8f9fa;
      padding: 12px 16px;
      border-radius: 6px;
      margin-bottom: 24px;
      font-size: 14px;
      color: #666;
    }
    .scopes-section { margin-bottom: 24px; }
    .scopes-title {
      font-size: 14px;
      font-weight: 600;
      color: #333;
      margin-bottom: 12px;
    }
    .scope-item {
      display: flex;
      align-items: flex-start;
      padding: 12px;
      background: #f8f9fa;
      border-radius: 6px;
      margin-bottom: 8px;
    }
    .scope-item input {
      margin-right: 12px;
      margin-top: 2px;
    }
    .scope-info { flex: 1; }
    .scope-name {
      font-weight: 500;
      color: #333;
      font-size: 14px;
    }
    .scope-desc {
      font-size: 12px;
      color: #666;
      margin-top: 2px;
    }
    .buttons {
      display: flex;
      gap: 12px;
    }
    button {
      flex: 1;
      padding: 14px;
      border: none;
      border-radius: 6px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
    }
    .btn-allow {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
    }
    .btn-allow:hover {
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }
    .btn-deny {
      background: #f8f9fa;
      color: #666;
      border: 1px solid #ddd;
    }
    .btn-deny:hover {
      background: #eee;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Authorize Application</h1>
    <p class="subtitle">
      <span class="client-name"><%= client && client.client_name ? client.client_name : 'An application' %></span>
      wants to access your account
    </p>

    <div class="user-info">
      Signed in as <strong><%= subject %></strong>
    </div>

    <form method="POST" action="/consent">
      <input type="hidden" name="challenge" value="<%= challenge %>">

      <div class="scopes-section">
        <div class="scopes-title">This will allow the application to:</div>

        <% const scopeDescriptions = {
          'openid': { name: 'OpenID', desc: 'Verify your identity' },
          'profile': { name: 'Profile', desc: 'Access your basic profile information' },
          'email': { name: 'Email', desc: 'View your email address' },
          'offline_access': { name: 'Offline Access', desc: 'Access your data while you are not using the app' }
        }; %>

        <% scopes.forEach(function(scope) { %>
          <div class="scope-item">
            <input type="checkbox" name="scopes" value="<%= scope %>" id="scope-<%= scope %>" checked>
            <div class="scope-info">
              <label for="scope-<%= scope %>" class="scope-name">
                <%= scopeDescriptions[scope] ? scopeDescriptions[scope].name : scope %>
              </label>
              <div class="scope-desc">
                <%= scopeDescriptions[scope] ? scopeDescriptions[scope].desc : 'Access to ' + scope %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>

      <div class="buttons">
        <button type="submit" name="accept" value="deny" class="btn-deny">Deny</button>
        <button type="submit" name="accept" value="allow" class="btn-allow">Allow</button>
      </div>
    </form>
  </div>
</body>
</html>
